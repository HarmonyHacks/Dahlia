@model Dahlia.ViewModels.RemoveParticipantFromRetreatViewModel

@{
    ViewBag.Title = "Remove Participant";
    Layout = "~/Views/Shared/_Popup.cshtml";
}

    <fieldset>
        <legend>Remove Participant</legend>
        <h3>Are you sure you want to remove @Model.FirstName @Model.LastName from the @Model.RetreatDate.ToShortDateString() retreat?</h3>

        @using (Html.BeginForm()) {
            <p>
                <input type="submit" value="Remove" /> &nbsp;
                <input type="button" value="Cancel" onclick="javascript:window.location='/';" />
            </p>
        }
    </fieldset>

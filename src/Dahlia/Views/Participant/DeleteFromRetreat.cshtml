@model Dahlia.ViewModels.DeleteParticipantFromRetreatViewModel

@{
    ViewBag.Title = "DeleteFromRetreat";
    Layout = "~/Views/Shared/_Popup.cshtml";
}

@using(Html.BeginForm("DoDeleteFromRetreat", "Participant", FormMethod.Post)) {
    @Html.HiddenFor(m => m.FirstName)
    @Html.HiddenFor(m => m.LastName)
    @Html.HiddenFor(m => m.RetreatDate)
    <h2>Are you sure?</h2>
    <div>Do you really want to remove @Model.FirstName @Model.LastName from the @Model.RetreatDate.ToString("d") retreat?</div>
    <input type="submit" value="Yes" /><br />
}
